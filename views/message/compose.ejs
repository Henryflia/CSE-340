<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
<ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <%  }) %>
</ul>
<% } %>

<div class="grid-from">
    <div class="form">
        <div class="boxform">
            <form class="login-form" action="/message/send" method="post">
                <label>Recipient <%- recipientList %></label>
                <label>Subject <input type="text" name="message_subject" required value="<%- locals.Subject %>"></label>
                <label>Message </label>
                <textarea class="message-pane" name="message_body" rows="8" required><%- locals.Body %></textarea>
                <input type="submit" value="SEND">
            </form>
        </div>
    </div>
</div>